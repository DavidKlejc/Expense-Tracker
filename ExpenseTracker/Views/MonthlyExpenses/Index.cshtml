@model IEnumerable<ExpenseTracker.Models.MonthlyExpense>

@{
    ViewData["Title"] = "Monthly Expenses";
}

<h1>Monthly Expenses</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MonthlyExpenseName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MonthlyExpenseName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.MonthlyExpenseId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.MonthlyExpenseId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.MonthlyExpenseId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
